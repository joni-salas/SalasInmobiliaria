                                $('#ModalTablePagos').append(`<tr>` + `<td> ${e.id} </td>` +  `<td> ${mostrar[2]}/${mostrar[1]}/${mostrar[0]} </td>` + `<td> $ ${e.importe} </td>` + `<td> ${e.nPago} </td>` + `</tr>`) 
      

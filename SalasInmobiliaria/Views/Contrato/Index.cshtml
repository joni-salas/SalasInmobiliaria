<script>

    function llenarTabla(id){
        $.ajax({
            type:'GET',
            url:'@Url.Action("PagoPorContrato","Contrato")',
            data: {'id': id},
            success: function (data){
                $('#ModalTablePagos').html("")
                console.log(data)
                if(data.length != 0){
                    data.forEach(function(e)
                            {
                                var fecha = e.fecha.split("T")

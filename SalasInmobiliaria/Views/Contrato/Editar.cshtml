@model SalasInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Editar";
    var Inmueble = (IList<Inmueble>)ViewBag.Inmueble;
    var Inquilino = (IList<Inquilino>)ViewBag.Inquilino;
}

<h1>Editar</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreGarante" class="control-label"></label>
                <input asp-for="NombreGarante" class="form-control" required/>
                <span asp-validation-for="NombreGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoGarante" class="control-label"></label>
                <input asp-for="TelefonoGarante" class="form-control" required/>
                <span asp-validation-for="TelefonoGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DniGarante" class="control-label"></label>
                <input asp-for="DniGarante" class="form-control" required/>
                <span asp-validation-for="DniGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" required/>
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label">Fecha inicio contrato</label>
                <div class=" justify-content-sm-center justify-content-start px-1"> <input asp-for="FechaInicio" asp-format="{0:dd/MM/yyyy}" type="text" id="dp1" class="datepicker" placeholder="Fecha Inicio" name="FechaInicio" readonly><span class="fa fa-calendar" required></span> </div>
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label">Fecha fin contrato</label>
                <div class=" justify-content-sm-center justify-content-start px-1"> <input asp-for="FechaFin" asp-format="{0:dd/MM/yyyy}" type="text" id="dp1" class="datepicker" placeholder="Fecha Caduca" name="FechaFin"  readonly><span class="fa fa-calendar" required></span> </div>
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

    <a asp-action="Index">Volver a la lista</a>
    <br/>
    <br/>
    <br/>
    <br/>
</div>


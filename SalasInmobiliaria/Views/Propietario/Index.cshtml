@model IEnumerable<SalasInmobiliaria.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Propietarios</h1>

<p>
    <a asp-action="Create">Crear nuevo Propietario</a>
</p>
<table class="table" id="tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <! Primer "Editar"" es el nombre, el segundo "Editar" es la accion en el controlador—->
                <a asp-action="Editar" asp-route-id="@item.Id" title="Editar"><i class="fa-solid fa-pen"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="Eliminar" asp-route-id="@item.Id" title="Eliminar"><i class="fa-solid fa-trash-can"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="Detalles" asp-route-id="@item.Id" title="Detalles"><i class="fa-regular fa-note-sticky"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-controller="Inmueble" asp-action="PorPropietario" asp-route-id="@item.Id" title="MisPropiedades"><i class="fa-solid fa-building"></i></a>&nbsp;
                
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_DataTable");}

}
